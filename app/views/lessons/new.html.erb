<div class="container">

  <h1>Create a new Lesson</h1>

<%= simple_form_for @lesson, :url => {:action => 'create'}, :method => 'post', :html => {:class => 'form-horizontal', :multipart => true } do |f| %>

  <%= render(:partial => 'lesson_form_new', :locals => {:f => f}) %>

  <%= f.button :submit, class: "btn btn-primary", value: "Create Lesson" %>
<% end %>

</div>
