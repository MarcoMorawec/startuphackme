<div class="background-lesson-detail">
<div class="container">
	<div class="row box-top">

		<section class="span6 offset3 text-center lesson_summary">

				<h1 class="lesson-week">
					Week <%= @lesson.week %>
				</h1>
				<h3 class="lesson-main-headline"><%= @lesson.main_headline %></h3>
				<article class="curator_block">
					<p><%= image_tag(@lesson.curator_url(:curator).to_s, :class => 'curator-shots') %></p>
					<h1><%= @lesson.curator_name %></h1>
					<h2><%= @lesson.curator_organization %></h2>
				</article>
				<div class="span">
					<p><%= @lesson.description %></p>
				</div>
		</section>
	</div>
</div> <!-- end of lesson detail background -->

		<section class="span6 offset3">
			<article class="lesson_block">
				<h1>1</h1>
				<hr>
				<h2><%= link_to(@lesson.first_ressource_headline, @lesson.first_ressource_headline_link, :class => 'no-style-link-lesson', target: "_blank") %></h2>
				<p><%= @lesson.first_ressource_text%></p>
			</article>

			<article class="lesson_block">
				<h1>2</h1>
				<hr>
				<h2><%= link_to(@lesson.second_ressource_headline, @lesson.second_ressource_headline_link, :class => 'no-style-link-lesson', target: "_blank") %></h2>
				<p><%= @lesson.second_ressource_text%></p>
			</article>

			<article class="lesson_block">
				<h1>3</h1>
				<hr>
				<h2><%= link_to(@lesson.third_ressource_headline, @lesson.third_ressource_headline_link, :class => 'no-style-link-lesson', target: "_blank") %></h2>
				<p><%= @lesson.third_ressource_text%></p>
			</article>

			<article class="lesson_block">
				<h1>4</h1>
				<hr>
				<h2><%= link_to(@lesson.fourth_ressource_headline, @lesson.fourth_ressource_headline_link, :class => 'no-style-link-lesson', target: "_blank") %></h2>
				<p><%= @lesson.fourth_ressource_text%></p>
			</article>
		</section>
	

	

	<div class="span5 offset3">
		<% if @admin %>
		<h4>Awesome, you're an admin - go ahead and edit or delete this lesson</h4>
		<%= link_to('Edit Lesson', {:action => 'edit', :id => @lesson.id }, :class => 'btn btn-mini') %>
		<%= link_to('Delete Lesson', {:action => 'destroy', :id => @lesson.id }, :method => 'delete', :confirm => 'Are you sure you want to delete this lesson?', :class => 'btn btn-mini btn-danger') %>
		<% end %>
	</div>

</section>