<div class="container">
	<div class="row box-top">

		<section class="span4 offset1">
			<article class="lesson_block">
				<h1>1</h1>
				<hr>
				<h2><%= link_to(@lesson.first_ressource_headline, @lesson.first_ressource_headline_link) %></h2>
				<p><%= @lesson.first_ressource_text%></p>
			</article>

			<article class="lesson_block">
				<h1>2</h1>
				<hr>
				<h2><%= link_to(@lesson.second_ressource_headline, @lesson.second_ressource_headline_link) %></h2>
				<p><%= @lesson.second_ressource_text%></p>
			</article>

			<article class="lesson_block">
				<h1>3</h1>
				<hr>
				<h2><%= link_to(@lesson.third_ressource_headline, @lesson.third_ressource_headline_link) %></h2>
				<p><%= @lesson.third_ressource_text%></p>
			</article>

			<article class="lesson_block">
				<h1>4</h1>
				<hr>
				<h2><%= link_to(@lesson.fourth_ressource_headline, @lesson.fourth_ressource_headline_link) %></h2>
				<p><%= @lesson.fourth_ressource_text%></p>
			</article>
		</section>

		<section class="span4 offset1 lesson_summary">

			<h1 class="lesson-week">
				Week <%= @lesson.week %>
			</h1>

			<h2 class="lesson-main-headline">
				<%= @lesson.main_headline %>
			</h2>

			<p> <%= @lesson.curator_description %> </p>

			<div class="row">
				<div class="span2">
					<p>
						<%= image_tag(@lesson.curator_url(:curator).to_s, :class => 'team-shots') %>
						<p>
						</div>
						<div class="span4">
							<h3>
								<%= @lesson.curator_name %>
							</h3>
						</div>
					</div>


				</div>
			</div>


			<% if @admin %>
			<%= link_to('Edit Lesson', {:action => 'edit', :id => @lesson.id }, :class => 'btn btn-mini') %>
			<%= link_to('Delete Lesson', {:action => 'destroy', :id => @lesson.id }, :method => 'delete', :confirm => 'Are you sure you want to delete this lesson?', :class => 'btn btn-mini btn-danger') %>
			<% end %>

		</section>