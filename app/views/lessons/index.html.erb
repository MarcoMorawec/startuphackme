<script type="text/javascript">
    $(window).load(function(){
        $('#lesson-social').modal('show');
    });
</script>

     
	<!-- Modal -->
	<% if user_signed_in? && (current_user.created_at + 5.seconds) > Time.now %>
		<div id="lesson-social" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		    <div class="modal-header">
			    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			    <h3 id="myModalLabel">Share the Love</h3>
		    </div>
		    <div class="modal-body">
			    <p>Know other awesome people who want to be part of a startup</p>
				</br>
				</br>
			    <strong>Tweet This</strong>
		    </div>
		</div>
	<% end %>

<h2>Lesson overview goes here</h2>

	<% if @admin %>
		<%= link_to('Create New Lesson', {:action => 'new' }, :class => 'btn btn-success') %>
	<% end %>

	<% @lesson.each do |lesson| %>
		<h4>Week: <%= lesson.week %>
			<%= link_to(lesson.weekly_tagline, {:action => 'show', :id => lesson.id}) %>
		</h4>

		<% if @admin %>
				<%= link_to('Edit Lesson', {:action => 'edit', :id => lesson.id }, :class => 'btn btn-mini') %>
				<%= link_to('Delete Lesson', {:action => 'destroy', :id => lesson.id }, :method => 'delete', :confirm => 'Are you sure you want to delete this lesson?', :class => 'btn btn-mini btn-danger') %>
		<% end %>
	<% end %>




 